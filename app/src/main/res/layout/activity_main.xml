<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MenuActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        app:fabSize="normal"
        android:background="@color/colorPrimary"
        android:elevation="6dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="25dp"
        android:clickable="true"
        android:src="@drawable/baseline_settings_white_48"
        android:id="@+id/btnDev"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="SITENAME"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="50sp"
        android:textColor="@color/white1"
        android:id="@+id/txtSiteName"/>

    <Button
        android:id="@+id/btnDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DOWNLOAD"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:layout_toRightOf="@+id/btnDev"
        />

    <Button
        android:id="@+id/bntPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAY"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_toRightOf="@+id/btnDev"/>

    <Button
        android:id="@+id/bntSite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SITE"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/btnDev"/>


    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:layout_centerInParent="true"
        android:foregroundGravity="center"
        android:id="@+id/viewPager">
    </androidx.viewpager.widget.ViewPager>

</RelativeLayout>